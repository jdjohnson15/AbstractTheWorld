<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <Button
        android:id="@+id/server"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="server"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/client"
        android:layout_toStartOf="@+id/client"
        android:layout_marginRight="55dp"
        android:layout_marginEnd="55dp"
        android:onClick="runServer"/>
    <Button
        android:id="@+id/client"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="client"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="51dp"
        android:layout_marginEnd="51dp"
        android:onClick="runClient"/>
    <EditText
        android:id="@+id/ipinput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="59dp"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/client"
        android:layout_alignEnd="@+id/client"
        android:layout_alignLeft="@+id/server"
        android:layout_alignStart="@+id/server" />
</RelativeLayout>
